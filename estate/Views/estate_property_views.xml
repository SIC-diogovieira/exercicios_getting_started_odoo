<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>

        <record id="estate_property_action" model="ir.actions.act_window">
            <field name="name">Propriedades</field>
            <field name="res_model">estate.property</field>
            <field name="view_mode">tree,form,search,kanban</field>
            <field name="context">{'search_default_property_id': True, 'default_property_id': True}</field>
        </record>

        <record id="view_property_search" model="ir.ui.view">
            <field name="name">estate.property.search</field>
            <field name="model">estate.property</field>
            <field name="arch" type="xml">
                <search string="Estate">
                    <field name="name"/>
                    <field name="postcode"/>
                    <field name="expected_price"/>
                    <field name="bedrooms"/>
                    <field name="living_areas" filter_domain="[('living_areas', '>=', self)]"/>
                    <field name="facades"/>
                    <filter string="available" name="state" domain="['|',('state','=','offer_r'),('state','=','new')]"/>
                    <filter string="postcode" name="postcode" context="{'group_by':'postcode'}"/>
                </search>
            </field>
        </record>

        <record id="estate_property_view_tree" model="ir.ui.view">
        <field name="name">estate.property.tree</field>
        <field name="model">estate.property</field>
        <field name="arch" type="xml">
            <tree string="Propriedades" decoration-success="state in ('offer_a','offer_r')" decoration-bf="state in ('offer_a')" decoration-muted="state in ('sold')">
                <field name="name"/>
                <field name="postcode"/>
                <field name="living_areas"/>
                <field name="expected_price"/>
                <field name="selling_price"/>
                <field name="date_availability"/>
                <field name="state" optional="hide"/>
            </tree>
        </field>
        </record>

        <record id="estate_property_view_form" model="ir.ui.view">
            <field name="name">estate.property.form</field>
            <field name="model">estate.property</field>
            <field name="arch" type="xml">
               <form string="Property">
                   <header>
                       <button name="property_cancel" type="object" string="Cancel"/>
                       <button name="property_sold" type="object" string="Sold"/>
                       <field name="state" widget="statusbar" state="new,sold,cancelled"/>
                   </header>
                <sheet>
                <div class="h1">
                    <field name="name"/>
                    <field name="property_tag_id" widget="many2many_tags" options="{'color_field': 'color'}"/>
                </div>
                    <group>

                        <field name="postcode"/>
                        <field name="date_availability"/>
                        <field name="property_type_id" options="{'no_create': True, 'no_create_edit': True, 'no_quick_create': True}"/>
                        <field name="active"/>
                    </group>
                    <group>
                            <field name="expected_price"/>
                            <field name="selling_price"/>
                            <field name="best_price"/>
                    </group>
                    <notebook>
                        <page string="Description">
                            <group>
                                <field name="description"/>
                                <field name="bedrooms"/>
                                <field name="living_areas"/>
                                <field name="facades"/>
                                <field name="garage"/>
                                <field name="garden"/>
                                <field name="garden_area"  attrs="{'invisible': [('garden', '=', False)]}"/>
                                <field name="garden_orientation" attrs="{'invisible': [('garden', '=', False)]}"/>
                                <field name="total_area" readonly="1"/>
                            </group>
                        </page>
                        <page string="Offers">
                            <group>
                                <field name="offers_id" string=" " attrs="{'readonly': ['|', ('state', '=', 'sold'), ('state', '=', 'canceled')]}"/>
                            </group>
                        </page>
                        <page string="Other Info">
                            <group>
                                <field name="salesperson"/>
                                <field name="buyer"/>
                            </group>
                        </page>
                    </notebook>
                </sheet>
               </form>
        </field>
        </record>

         <record id="estate_property_view_kanbane" model="ir.ui.view">
            <field name="name">estate.property.kanban</field>
            <field name="model">estate.property</field>
            <field name="arch" type="xml">
                <kanban default_group_by="property_type_id">
                    <field name="state" invisible="1"/>
                    <templates>
                        <t t-name="kanban-box">
                            <div class="oe_kanban_global_click">
                                <strong><field name="name"/></strong>
                                <div>Expected price: <field name="expected_price"/></div>
                                <div t-if="record.state.raw_value == 'offer_r'">
                                    Best offer: <field name="best_price"/>
                                </div>
                                <div t-if="record.state.raw_value == 'offer_a'">
                                    Selling price: <field name="selling_price"/>
                                </div>
                                <div>
                                    <field name="property_tag_id" widget="many2many_tags"/>
                                </div>
                                <div t-if="record.state.raw_value == 'sold'">
                                    <strong>SOLD</strong>
                                </div>
                            </div>
                        </t>
                    </templates>
            </kanban>
            </field>
        </record>

    </data>
</odoo>