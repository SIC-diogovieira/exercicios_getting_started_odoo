<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>

        <!-- =====================================================
             ACTION PRINCIPAL
             Abre o modelo estate.property.offers
             - view_mode: só tree (lista de ofertas)
             ===================================================== -->
        <record id="estate_offers_action" model="ir.actions.act_window">
            <field name="name">Offers</field>
            <field name="res_model">estate.property.offers</field>
            <field name="view_mode">tree</field>
        </record>

        <!-- =====================================================
             VIEW SEARCH
             Permite pesquisar ofertas pelo campo property_id
             ===================================================== -->
        <record id="view_delivery_carrier_search" model="ir.ui.view">
            <field name="name">estate.property.offers.search</field>
            <field name="model">estate.property.offers</field>
            <field name="arch" type="xml">
                <search string="Estate">
                    <field name="property_id"/>
                </search>
            </field>
        </record>

        <!-- =====================================================
             VIEW TREE
             Lista de ofertas (com botões de ação)
             - editable="bottom": pode criar oferta direto na lista
             - decoration-danger: linhas em vermelho se status = refused
             - decoration-success: linhas em verde se status = accepted
             ===================================================== -->
        <record id="estate_property_view_tree_offer" model="ir.ui.view">
            <field name="name">estate.property.offers.tree</field>
            <field name="model">estate.property.offers</field>
            <field name="arch" type="xml">
                <tree string="Propriedades"
                      editable="bottom"
                      decoration-danger="status in ('refused')"
                      decoration-success="status in ('accepted')">

                    <!-- Preço da oferta -->
                    <field name="price"/>

                    <!-- Parceiro (cliente que fez a oferta) -->
                    <field name="partner_id"/>

                    <!-- Prazo de validade da oferta -->
                    <field name="validity" optional="hide"/>
                    <field name="date_deadline"/>

                    <!-- Botão para aceitar oferta -->
                    <button name="offer_accept"
                            string="Accept"
                            type="object"
                            icon="fa-check"
                            attrs="{'invisible': [('price', '=', False)]}"/>

                    <!-- Botão para recusar oferta -->
                    <button name="offer_refuse"
                            string="Refuse"
                            type="object"
                            icon="fa-level-down"
                            attrs="{'invisible': [('price', '=', False)]}"/>

                    <!-- Status da oferta -->
                    <field name="status" optional="hide"/>
                </tree>
            </field>
        </record>

    </data>
</odoo>
