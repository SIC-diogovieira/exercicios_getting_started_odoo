<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>

        <record id="estate_offers_action" model="ir.actions.act_window">
            <field name="name">Offers</field>
            <field name="res_model">estate.property.offers</field>
            <field name="view_mode">tree</field>
        </record>

        <record id="view_delivery_carrier_search" model="ir.ui.view">
            <field name="name">estate.property.offers.search</field>
            <field name="model">estate.property.offers</field>
            <field name="arch" type="xml">
                <search string="Estate">
                    <field name="property_id"/>
                </search>
            </field>
        </record>

        <record id="estate_property_view_tree" model="ir.ui.view">
        <field name="name">estate.property.offers.tree</field>
        <field name="model">estate.property.offers</field>
        <field name="arch" type="xml">
            <tree string="Propriedades">
                <field name="price"/>
                <field name="partner_id"/>
                <field name="validity"/>
                <field name="date_deadline"/>
                <button name="offer_accept" string="Accept" type="object" icon="fa-check"/>
                <button name="offer_refuse" string="Refuse" type="object" icon="fa-level-down"/>
                <field name="status"/>
            </tree>
        </field>
        </record>


    </data>
</odoo>